				<row>
					<entry>
						<keycombo><keycap>Alt</keycap><keycap>r</keycap>
						</keycombo>
					</entry>
					<entry>
						reverse region
					</entry>
				</row>
				<row>
					<entry>
						<keycombo><keycap>Alt</keycap><keycap>n</keycap>
						</keycombo>
					</entry>
					<entry>
						normalize region
					</entry>
				</row>
			</tbody>
		</tgroup>
	</table>
